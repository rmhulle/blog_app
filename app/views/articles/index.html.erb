


<h1>Welcome to my BlogApp</h1>


<div class ="row">
  <%= link_to "New Article", new_article_path, class: "btn btn-primary btn-lg pull-right", id: "new-article-button" %>  
</div>



<% @articles.each do |article| %>


  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"> <%= link_to article.title, article_path(article) %></h3>
    </div>
    <div class="panel-body">
      <%= truncate(article.body, length: 500) %>
    </div>
  </div>

<% end %>




